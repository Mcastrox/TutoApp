<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtributesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blackMate"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/tutor_profile" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textEducacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education_txt"
                android:textColor="@color/blackMate" />

            <EditText
                android:id="@+id/educacion_tutor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/edittext_border"
                android:ems="20"
                android:inputType="textPersonName"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" />

            <TextView
                android:id="@+id/textOcupacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="@string/ocupation_txt"
                android:textColor="@color/blackMate" />

            <EditText
                android:id="@+id/ocupacion_tutor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" />

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="@string/description_txt"
                android:textColor="@color/blackMate" />

            <EditText
                android:id="@+id/descripcion_tutor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/medium_margin"
                android:gravity="top"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:inputType="textPersonName|textLongMessage|textMultiLine"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" />

            <TextView
                android:id="@+id/textCategorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:text="@string/category_txt"
                android:textColor="@color/blackMate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/categoria_arte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/art_txt" />

                <CheckBox
                    android:id="@+id/categoria_idiomas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languages_txt" />

                <CheckBox
                    android:id="@+id/categoria_matematicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/math_txt" />

                <CheckBox
                    android:id="@+id/categoria_cocina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cooking_txt" />

                <CheckBox
                    android:id="@+id/categoria_economia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/economy_txt" />

                <CheckBox
                    android:id="@+id/categoria_habilidadesSociales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_abilities_txt" />

                <CheckBox
                    android:id="@+id/categoria_fisica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/physics_txt" />

                <CheckBox
                    android:id="@+id/categoria_computacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/computer_science" />

                <CheckBox
                    android:id="@+id/categoria_quimica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chemistry_txt" />

                <CheckBox
                    android:id="@+id/categoria_deportes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sports_txt" />

            </LinearLayout>


            <Button
                android:id="@+id/guardar_tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@color/soft_cyan"
                android:text="Enviar"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>