<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blackMate</item>
        <item name="colorPrimaryDark">@color/blackMate</item>
        <item name="colorAccent">@color/soft_cyan</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SplashTheme2" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash2</item>
    </style>

    <!--RatingBar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/soft_grey</item>
        <item name="colorControlActivated">#efb810</item>
    </style>
</resources>
