<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Register_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/big_padding"
            android:paddingRight="@dimen/big_padding">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_margin"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="@string/register_text"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/big_padding"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginRight="@dimen/big_padding"
                android:layout_marginBottom="@dimen/small_margin"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese su nombre"
                android:inputType="textPersonName"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese su apellido"
                android:inputType="textPersonName"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese su correo"
                android:inputType="textEmailAddress"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese su contraseña"
                android:inputType="textPassword"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese un numero de teléfono"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_direccion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_small_height"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="#A3131313"
                android:ems="10"
                android:hint="Ingrese una dirección"
                android:padding="@dimen/small_margin"
                android:textColor="#FFFFFF"
                android:textColorHint="#A3FFFFFF"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/cbx_politics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:buttonTint="@color/light_grayish"
                android:text="Al registrarme acepto los términos y políticas de privacidad"
                android:textColor="@color/blackMate"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:background="#D34FDAB9"
                android:onClick="register"
                android:text="Crear cuenta"
                android:textColor="#FFFFFf"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>